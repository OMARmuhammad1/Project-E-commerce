@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Users</h1>
@if (Model.Count() > 0)
{@*asp-controller="User"*@

    <form class="my-1" asp-action="Index" >
        <div class="row">
            <div class=" rounded-circle   col-sm-11"><input name="Search" class="form-control" placeholder="User's Name'"></div>
            <div><input type="submit" value="Search" class="btn btn-info btn-block"></div>
        </div>


    </form>


    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U=>U.Id)</td>
                <td>@Html.DisplayNameFor(U=>U.FName)</td>
                <td>@Html.DisplayNameFor(U=>U.LName)</td>
                <td>@Html.DisplayNameFor(U=>U.Email)</td>
                <td>@Html.DisplayNameFor(U=>U.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(U=>U.Roles)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>

            </tr>
        </thead>
        <tbody>
            @foreach (var User in Model)
            {
                <tr>
                    <td>@User.Id</td>
                    <td>@User.FName</td>
                    <td>@User.LName</td>
                    <td>@User.Email</td>
                    <td>@User.PhoneNumber</td>
                    <td>@string.Join(",",User.Roles)</td>
                    <partial name="_ButtonPartialView" model="@User.Id" />
                    

                </tr>
            }
        </tbody>

    </table>

}
else
{
    <div>
        <h1>There Is No Users</h1>
    </div>
}

