@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Roles</h1>
<a asp-action="Create" class="btn btn-success">Add New Role</a>
<br />
@if (Model.Count() > 0)
{@*asp-controller="User"*@

    <form class="my-1" asp-action="Index">
        <div class="row">
            <div class=" rounded-circle   col-sm-11"><input name="Search" class="form-control" placeholder="Role's Name'"></div>
            <div><input type="submit" value="Search" class="btn btn-info btn-block"></div>
        </div>


    </form>


    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U=>U.Id)</td>
                <td>@Html.DisplayNameFor(U=>U.RoleName)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>

            </tr>
        </thead>
        <tbody>
            @foreach (var Role in Model)
            {
                <tr>
                    <td>@Role.Id</td>
                    <td>@Role.RoleName</td>

                    <partial name="_ButtonPartialView" model="@Role.Id" />


                </tr>
            }
        </tbody>

    </table>

}
else
{
    <div>
        <h1>There Is No Roles</h1>
    </div>
}
